# Environment Configuration
# Copy this file to .env and fill in your values

# Application Environment
ENVIRONMENT=development  # development, staging, production

# ============================================================
# DATABASE SETTINGS
# ============================================================

# ClickHouse
DB_CLICKHOUSE_HOST=localhost
DB_CLICKHOUSE_PORT=8123
DB_CLICKHOUSE_USER=default
DB_CLICKHOUSE_PASSWORD=
DB_CLICKHOUSE_DATABASE=ethereum

# Qdrant
DB_QDRANT_HOST=localhost
DB_QDRANT_PORT=6333
DB_QDRANT_API_KEY=

# Neo4j
DB_NEO4J_URI=bolt://localhost:7687
DB_NEO4J_USER=neo4j
DB_NEO4J_PASSWORD=password
DB_NEO4J_DATABASE=neo4j

# Redis
DB_REDIS_HOST=localhost
DB_REDIS_PORT=6379
DB_REDIS_PASSWORD=
DB_REDIS_DB=0

# ============================================================
# ETHEREUM SETTINGS
# ============================================================

ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
ETH_RPC_API_KEY=
ETH_CHAIN_ID=1

# CryptoHouse (ClickHouse Ethereum dataset)
ETH_CRYPTOHOUSE_ENABLED=true
ETH_CRYPTOHOUSE_HOST=github.demo.trial.altinity.cloud
ETH_CRYPTOHOUSE_PORT=9440
ETH_CRYPTOHOUSE_USER=demo
ETH_CRYPTOHOUSE_PASSWORD=demo

# Block processing
ETH_BLOCKS_PER_BATCH=100
ETH_FINALITY_BLOCKS=64

# ============================================================
# LLM SETTINGS
# ============================================================

LLM_ENDPOINT=http://localhost:8000/v1
LLM_MODEL_NAME=Qwen/Qwen3-30B-A3B-Thinking-2507
LLM_API_KEY=

# Generation parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096
LLM_TOP_P=0.95

# Embedding model
LLM_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
LLM_EMBEDDING_DEVICE=cuda
LLM_EMBEDDING_BATCH_SIZE=32

# ============================================================
# AGENT SETTINGS
# ============================================================

AGENT_RETRIEVAL_TOP_K=100
AGENT_RRF_K=60
AGENT_MAX_VALIDATION_RETRIES=3
AGENT_CITATION_VERIFICATION_ENABLED=true
AGENT_MAX_PATH_HOPS=5
AGENT_CLUSTER_ALGORITHM=louvain
AGENT_ANOMALY_Z_THRESHOLD=3.0
AGENT_LOOKBACK_DAYS=30
AGENT_TIMEOUT_SECONDS=300
AGENT_DB_QUERY_TIMEOUT_SECONDS=60

# ============================================================
# API SETTINGS
# ============================================================

API_HOST=0.0.0.0
API_PORT=8080
API_DEBUG=false
API_CORS_ORIGINS=["*"]

# Authentication
API_JWT_SECRET=change-me-in-production-use-strong-random-key
API_JWT_ALGORITHM=HS256
API_JWT_EXPIRATION_HOURS=24

# Rate limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================
# OBSERVABILITY SETTINGS
# ============================================================

OBS_LOG_LEVEL=INFO
OBS_LOG_FORMAT=json

# Prometheus metrics
OBS_METRICS_ENABLED=true
OBS_METRICS_PORT=9090

# Distributed tracing
OBS_TRACING_ENABLED=true
OBS_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# LangSmith (optional)
OBS_LANGSMITH_ENABLED=false
OBS_LANGSMITH_API_KEY=
OBS_LANGSMITH_PROJECT=insider-detection

# ============================================================
# CELERY / TASK QUEUE SETTINGS
# ============================================================

CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1
